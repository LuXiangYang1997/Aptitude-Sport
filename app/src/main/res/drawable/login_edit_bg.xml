<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="@dimen/dp_2"
        android:top="@dimen/dp_2"
        android:right="@dimen/dp_2"
        android:bottom="@dimen/dp_3">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="#0F000000"
                android:startColor="#0F000000" />

        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:left="@dimen/dp_3"
        android:top="@dimen/dp_3"
        android:right="@dimen/dp_3"
        android:bottom="@dimen/dp_5">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="@color/color_FFFFFF"
                android:startColor="@color/color_FFFFFF" />

        </shape>
    </item>

</layer-list>