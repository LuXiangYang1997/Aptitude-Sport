<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="confirmorderVm"
            type="com.huasport.smartsport.ui.pcenter.medal.vm.PersonalConfirmOrderVM" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F5F5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_medalorderbg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_105"
                    android:background="@mipmap/icon_medalorderbg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/dp_17" />

                    <TextView
                        android:id="@+id/tv_orderdecript"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_medalDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170"
                    android:layout_below="@+id/icon_medalorderbg"
                    android:layout_alignParentStart="true"
                    android:background="@color/color_FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_73"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/orderDetail_medal_img"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_75"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:scaleType="fitXY"
                            android:src="@mipmap/orderimg" />

                        <TextView
                            android:id="@+id/orderDetail_tv_title"
                            android:layout_width="@dimen/dp_200"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/orderDetail_medal_img"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_toRightOf="@+id/orderDetail_medal_img"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_orderDetail_medalCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/color_FF8F00"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orderDetail_tv_price"
                            android:layout_width="@dimen/dp_200"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/orderDetail_medal_img"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_toRightOf="@+id/orderDetail_medal_img"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/color_FF8F00"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_medalPriceDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_115"
                    android:layout_below="@+id/ll_medalDetail"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/color_FFFFFF"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="商品金额"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_orderMedalPrice"
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="运费"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_freight"
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:background="@color/color_E2E2E2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="总计："
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_allPrice"
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/color_FF8F00"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_medalPriceDetail"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/color_FFFFFF"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单编号 : "
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_MedalorderDetail_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_3F3F3F"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:background="@color/color_E2E2E2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下单时间 : "
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_MedalorderDetail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_3F3F3F"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:background="@color/color_E2E2E2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付方式 : "
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_payWay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_3F3F3F"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_95"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_64"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/matchindroduce_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@mipmap/icon_location" />

                        <TextView
                            android:id="@+id/tv_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_13"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />


                </LinearLayout>


            </RelativeLayout>

        </ScrollView>


    </LinearLayout>

</layout>
