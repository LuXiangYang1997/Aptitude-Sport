<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:alpha="0.7"
        android:background="@mipmap/icon_medalbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/rl_top_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/close_pop"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_media_close" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_pop"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_media_share" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top_status">


        <ImageView
            android:id="@+id/icon_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/icon_medalmostbottom" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:text="恭喜您获得了新奖章"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/dp_25" />

        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/medalcard"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_270"
            android:layout_below="@+id/tv_text"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_medalcard" />

        <TextView
            android:id="@+id/getMedal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_bg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@mipmap/icon_getmedal"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:text="领取奖章"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_15" />


    </RelativeLayout>


</RelativeLayout>
