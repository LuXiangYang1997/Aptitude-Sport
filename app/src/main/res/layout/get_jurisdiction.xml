<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:text='"智体运动"，想访问您的通讯录'
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="智体运动需要访问您的通讯录，以方便向您推荐好友。"
            android:id="@+id/detailMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_E2E2E2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_dialog_left_white"
                android:gravity="center"
                android:text="不允许"
                android:textColor="@color/color_0000ff"
                android:textSize="12sp" />

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/color_E2E2E2" />


            <TextView
                android:text="好"
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_dialog_right_white"
                android:gravity="center"
                android:textColor="@color/color_0000ff"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
