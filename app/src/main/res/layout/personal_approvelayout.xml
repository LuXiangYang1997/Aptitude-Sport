<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="approveVm"
            type="com.huasport.smartsport.ui.pcenter.approve.vm.ApproveVm" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EFEFF4"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/approve_tablayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/color_FFFFFF"></android.support.design.widget.TabLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--个人认证-->
                <LinearLayout
                    android:id="@+id/ll_pcenterapprove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13">

                            <LinearLayout
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/edittext_requird"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/color_E50113"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/textView_name"
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="真实姓名"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/sp_13" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/et_realName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/dp_15"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请输入您的真实姓名"
                                android:singleLine="true"
                                android:textColorHint="@color/color_999999"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@color/color_E2E2E2" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13">

                            <LinearLayout
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/color_E50113"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="身份证号"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/sp_13" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/dp_15"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请输入您的身份证号"
                                android:numeric="integer"
                                android:singleLine="true"
                                android:textColorHint="@color/color_999999"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/otherMsgLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/color_FFFFFF">

                            <View
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center"
                                android:background="@color/color_E50113" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="上传身份证明"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_13"
                                android:text="(仅用于认证)"
                                android:textColor="@color/color_2A2A2A"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_15"
                            android:background="@color/color_FFFFFF"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:id="@+id/passport_front"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_105"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_weight="1"
                                android:onClick="@{()->approveVm.frontImg()}">

                                <ImageView
                                    android:id="@+id/imgfront"
                                    android:layout_width="@dimen/dp_165"
                                    android:layout_height="@dimen/dp_105"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/img_shangchuan" />

                                <TextView
                                    android:id="@+id/tv_front"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingTop="@dimen/dp_30"
                                    android:text="上传身份证国徽面"
                                    android:textColor="@color/color_999999" />

                                <TextView
                                    android:id="@+id/tv_fronttip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_front"
                                    android:layout_centerInParent="true"
                                    android:text="(正面)"
                                    android:textColor="@color/color_999999" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_contract"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_105"
                                android:layout_weight="1"
                                android:onClick="@{()->approveVm.contractImg()}"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/img_contrary"
                                    android:layout_width="@dimen/dp_165"
                                    android:layout_height="@dimen/dp_105"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/img_shangchuan" />

                                <TextView
                                    android:id="@+id/tv_contrary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingTop="@dimen/dp_30"
                                    android:text="上传身份证号码面"
                                    android:textColor="@color/color_999999" />

                                <TextView
                                    android:id="@+id/tv_contracttip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_contrary"
                                    android:layout_centerInParent="true"
                                    android:text="(反面)"
                                    android:textColor="@color/color_999999" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_27"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="上传手持身份证照片"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                     android:layout_margin="@dimen/dp_15"
                            android:background="@color/color_FFFFFF"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_105"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/dp_165"
                                    android:layout_height="@dimen/dp_105"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/icon_uploadtip" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_105"
                                android:layout_weight="1"
                                android:onClick="@{()->approveVm.handImg()}"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/img_hand"
                                    android:layout_width="@dimen/dp_165"
                                    android:layout_height="@dimen/dp_105"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/img_shangchuan" />

                                <TextView
                                    android:id="@+id/tv_handtip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingTop="@dimen/dp_30"
                                    android:text="上传手持身份证照片"
                                    android:textColor="@color/color_999999" />

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
                <!--企业认证-->
                <LinearLayout
                    android:id="@+id/ll_firmapprove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13">

                            <LinearLayout
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/color_E50113"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="企业名称"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/sp_13" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/et_firmName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/dp_15"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请输入企业名称"
                                android:singleLine="true"
                                android:textColorHint="@color/color_999999"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@color/color_E2E2E2" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13">

                            <LinearLayout
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="*"
                                    android:textColor="@color/color_E50113"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="企业法人"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/sp_13" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/et_firmlegalperson"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/dp_15"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请输入企业法人"
                                android:singleLine="true"
                                android:textColorHint="@color/color_999999"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/color_FFFFFF">

                            <View
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center"
                                android:background="@color/color_E50113" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="上传营业执照"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="(仅用于认证)"
                                android:textColor="@color/color_2A2A2A"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                          android:layout_margin="@dimen/dp_15"
                            android:background="@color/color_FFFFFF"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_105"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_weight="1"
                                android:onClick="@{()->approveVm.firmImg()}">

                                <ImageView
                                    android:id="@+id/img_firm"
                                    android:layout_width="@dimen/dp_165"
                                    android:layout_height="@dimen/dp_105"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/img_shangchuan" />

                                <TextView
                                    android:id="@+id/tv_firmtip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingTop="@dimen/dp_40"
                                    android:text="上传营业执照照片"
                                    android:textColor="@color/color_999999" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_nextstep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/color_FF8F00"
            android:gravity="center"
            android:onClick="@{()->approveVm.nextStep()}"
            android:text="下一步"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>
</layout>
