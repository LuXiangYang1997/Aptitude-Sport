<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="medalPayVm"
            type="com.huasport.smartsport.ui.pcenter.medal.vm.MedalPayVm" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_EFEFF4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="@dimen/dp_10">

                            <View
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center"
                                android:background="@color/color_E50113" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="订单信息"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           android:layout_margin="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/goodsNumber"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="商品编号 : "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/commodity_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/goodsNumber"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:gravity="right"
                                android:layout_toRightOf="@+id/getaddress"
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:background="@color/color_BDBDBD" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_marginRight="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/goodsName"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:text="商品名称 : "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/commodity_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/goodsName"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:gravity="right"
                                android:layout_toRightOf="@+id/getaddress"
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/sp_13"
                            android:background="@color/color_BDBDBD" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_marginRight="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/getPerson"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="收件人: "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/order_Addressee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/getPerson"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:gravity="right"
                                android:layout_toRightOf="@+id/getaddress"
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/sp_13"
                            android:background="@color/color_BDBDBD" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_marginRight="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/number"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:text="联系方式 : "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/Contact_information"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/number"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:gravity="right"
                                android:layout_toRightOf="@+id/getaddress"
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:background="@color/color_BDBDBD" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_marginRight="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/getaddress"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:text="收货地址 : "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView

                                android:id="@+id/Receiving_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:layout_toRightOf="@+id/getaddress"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15">

                            <View
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_13"
                                android:layout_gravity="center"
                                android:background="@color/color_E50113" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:text="支付方式"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/weChat_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/icon_paywechat" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_toRightOf="@+id/weChat_img"
                                    android:text="微信支付"
                                    android:textSize="@dimen/sp_13" />

                                <RadioButton
                                    android:id="@+id/wechat_rb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:background="@drawable/checkboxbtn_selecter"
                                    android:button="@null" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_5"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:background="@color/color_BDBDBD" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/zhifubao"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/icon_alipay" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_toRightOf="@+id/zhifubao"
                                    android:text="支付宝支付"
                                    android:textSize="@dimen/sp_13" />

                                <RadioButton
                                    android:id="@+id/alipay_rb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:background="@drawable/checkboxbtn_selecter"
                                    android:button="@null" />

                            </RelativeLayout>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单编号 : "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/tv_order_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:background="@color/color_BDBDBD" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="下单时间 : "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/order_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </LinearLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:background="@color/color_BDBDBD" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单金额 : "
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/order_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/color_3F3F3F"
                                android:textSize="@dimen/sp_13" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_medal_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/color_FF8F00"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

    </LinearLayout>
</layout>
