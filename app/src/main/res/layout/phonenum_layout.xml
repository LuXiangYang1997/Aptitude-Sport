<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>

    <LinearLayout
        android:id="@+id/ll_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llayout_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_13">

            <LinearLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/phoneNum_requird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_E50113"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_phoneNum"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <EditText
                android:id="@+id/form_userPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@null"
                android:phoneNumber="true"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/color_E2E2E2" />


        <LinearLayout
            android:id="@+id/llayout_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_13">

            <LinearLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/code_requird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_E50113"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>


            <EditText
                android:id="@+id/form_VerificationCode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@null"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_13"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/color_BDBDBD" />

            <TextView
                android:id="@+id/send_Authcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/color_FF8F00"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/color_E2E2E2" />

    </LinearLayout>

</layout>
