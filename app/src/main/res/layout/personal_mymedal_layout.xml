<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="medalBean"
            type="com.huasport.smartsport.ui.pcenter.bean.PersonalMedalBean.ResultBean.ScoreCertBean"/>
        <variable
            name="medalAdapter"
            type="com.huasport.smartsport.ui.pcenter.adapter.PersonalMedalAdapter"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E2E2E2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_FFFFFF"
            android:paddingLeft="@dimen/dp_17"
            android:paddingRight="@dimen/dp_17">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@mipmap/icon_name" />

            <TextView
                android:id="@+id/medal_matchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_10"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_E2E2E2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/icon_medal_list" />

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/medal_competitionName"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/partTimeStr"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:maxLines="1"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_13" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">

                    <TextView
                        android:id="@+id/lookupCerficate"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="查看证书"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:onClick="@{()->medalAdapter.lookMedal(medalBean)}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/receive_icon"
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_14"
                            android:src="@mipmap/icon_medal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="领取奖章"
                            android:textColor="@color/color_FF8F00"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</layout>
